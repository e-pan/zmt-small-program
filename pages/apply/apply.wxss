/* pages/apply/apply.wxss */
ul {
	width: 100%;
}
li:first-child {
	border-top: 1px solid #ddd;
}
li {
	border-bottom: 1px solid #ddd;
	display: flex;
	align-content: center;
	justify-content: space-between;
	padding: 30rpx;
}
li text:first-child {
	font-size: 34rpx;
}
li text:last-child, li picker:last-child, li input:last-child {
	font-size: 26rpx;
}
.half-box {
	width: 48%;
}
.half-img {
	width: 94%;
	border: 1px dotted #ddd;
	border-radius: 5px;
	padding: 2% 3%;
	margin-top: 10rpx;
}
.more-img {
	width: 100%;
	margin-top: 20rpx;
	line-height: auto;
}
.more-img view {
	display: block;
	position: relative;
	width: 150rpx;
	height: 150rpx;
	float: left;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	border: 1px solid #f3f3f3;
}
.more-img view:nth-child(4n) {
  margin-right: 0;
}
.more-img image {
	width: 150rpx;
	height: 150rpx;
	position: absolute;
}
.more-img span {
	position: absolute;
	z-index: 2;
	background: #ddd;
	width: 35rpx;
	height: 35rpx;
	line-height: 35rpx;
	border-radius: 20rpx;
	text-align: center;
	color: #fff;
	top: -17rpx;
	right: -17rpx;
	font-size: 25rpx;
	background: rgba(0, 0, 0, .6);
}
.more-img .add {
	background: #f3f3f3;
	color: #bbb;
	width: 150rpx;
	font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center
}
.authorization {
	display: block;
  padding-bottom: 100rpx;
}
.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e05c57;
  color: #fff;
  z-index: 2;
}
.submit {
  background: #ddd;
}