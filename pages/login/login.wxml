<view class='login'>
	<image src='../../images/pic/logo.png' class='logo'></image>
	<ul>
		<li>
			<input type='number' placeholder='请输入您的手机号' maxlength='11' bindinput='getMobile' />
		</li>
		<li>
			<input class='last' type='{{ inputType }}' placeholder='请输入您的密码' bindinput='getPwd' />
			<image src='{{ eye }}' class='icon' bindtap='togglePwd'></image>
		</li>
		<li>
			<button bindtap='submit' class='submit-btn '>登录</button>
		</li>
		<li class='text'>
			<text bindtap='onReg'>注册账号</text>
			<text bindtap='onFindPwd'>忘记密码</text>
		</li>
	</ul>
</view>