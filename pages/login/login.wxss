page {
	height: 100%;
	width: 100%;
}
.login {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
}
.image {
	display: flex;
	align-content: center;
	justify-content: center;
	margin: 100rpx 0;
}
.image image {
	width: 180rpx;
	height: 50rpx;
}
.login ul {
	margin: 0 30rpx;
}
.login li {
	display: flex;
	justify-content: space-between;
	margin-bottom: 30rpx;
	padding: 15rpx 0;
}
.login input {
	text-align: right;
	font-size: 26rpx;
}
.login button {
	width: 100%;
	margin-top: 50rpx;
}