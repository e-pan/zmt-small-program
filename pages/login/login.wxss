.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
.innter-input {
  text-align: right;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.footer ul {
  display: flex;
  width: 100%;
  background: #fff;
  justify-content: space-around;
  padding: 15rpx 0;
}
.footer li {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer text {
  font-size: 26rpx;
  padding-top: 5rpx;
  color: #c4c4cc;
}
.footer .icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-size: cover;
}
.footer .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan.svg');
}
.footer .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order.svg');
}
.footer .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg.svg');
}
.footer .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user.svg');
}
.footer .active text {
  color: #13b7f6;
}
.footer .active .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan-h.svg');
}
.footer .active .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order-h.svg');
}
.footer .active .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg-h.svg');
}
.footer .active .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user-h.svg');
}
page {
  height: 100%;
  width: 100%;
}
.login {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.login .logo {
  width: 180rpx;
  height: 179rpx;
  margin-bottom: 50rpx;
}
.login ul {
  margin: 0 5%;
  width: 90%;
  padding-bottom: 200rpx;
}
.login li {
  position: relative;
}
.login li .icon {
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  z-index: 2;
  top: -70rpx;
  right: -650rpx;
}
.login input {
  text-align: left;
  font-size: 26rpx;
  border: 1px solid #c4c4cc;
  border-bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}
.login input.last {
  border-bottom: 1px solid #c4c4cc;
}
.login button {
  color: #fff;
  background: #13b7f6;
  border: 0;
  margin-top: 50rpx;
}
.login text {
  color: #13b7f6;
  font-size: 30rpx;
}
.login .text {
  padding-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
