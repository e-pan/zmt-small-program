/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page {
  font-family: helvetica neue;
  font-weight: 300;
  font-size: 36rpx;
}
.innter-input {
  text-align: right;
}
text {
  color: #333;
}
picker {
  color: #999;
}
.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
page {
  height: 100%;
  width: 100%;
}
.login {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.login .logo {
  width: 180rpx;
  height: 179rpx;
  margin-bottom: 50rpx;
}
.login ul {
  margin: 0 5%;
  width: 90%;
  padding-bottom: 200rpx;
}
.login li {
  position: relative;
}
.login li .icon {
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  z-index: 2;
  top: -70rpx;
  right: -650rpx;
}
.login input {
  text-align: left;
  font-size: 26rpx;
  border: 1px solid #c4c4cc;
  border-bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}
.login input.last {
  border-bottom: 1px solid #c4c4cc;
}
.login button {
  color: #fff;
  background: #13b7f6;
  border: 0;
  margin-top: 50rpx;
}
.login text {
  color: #13b7f6;
  font-size: 30rpx;
}
.login .text {
  padding-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
