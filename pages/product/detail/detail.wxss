/** rest **/
page {
  background: #f2f2fc;
}
text {
  color: #333;
  font-size: 30rpx;
}
picker {
  color: #999;
}
/** conmmon **/
.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
.innter-input {
  text-align: right;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.footer ul {
  display: flex;
  width: 100%;
  background: #fff;
  justify-content: space-around;
  padding: 15rpx 0;
}
.footer li {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer text {
  font-size: 26rpx;
  padding-top: 5rpx;
  color: #c4c4cc;
}
.footer .icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-size: cover;
}
.footer .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan.svg');
}
.footer .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order.svg');
}
.footer .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg.svg');
}
.footer .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user.svg');
}
.footer .active text {
  color: #13b7f6;
}
.footer .active .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan-h.svg');
}
.footer .active .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order-h.svg');
}
.footer .active .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg-h.svg');
}
.footer .active .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user-h.svg');
}
.product-detail .item {
  margin-bottom: 20rpx;
  background: #fff;
}
.product-detail .item view {
  padding: 15rpx 30rpx;
}
.product-detail .item view:first-child {
  border-bottom: 1px solid #f2f2fc;
}
.product-detail image {
  width: 30rpx;
  height: 30rpx;
}
.product-detail li {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 0;
}
.product-detail li text {
  display: flex;
  justify-content: flex-start;
}
.product-detail text {
  padding-left: 10rpx;
  font-size: 26rpx;
}
.product-detail .tit {
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-detail .tit text {
  font-size: 33rpx;
  color: #333;
  font-weight: 500;
}
