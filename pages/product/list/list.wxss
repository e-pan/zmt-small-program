/** conmmon **/
.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
.innter-input {
  text-align: right;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.footer ul {
  display: flex;
  width: 100%;
  background: #fff;
  justify-content: space-around;
  padding: 15rpx 0;
}
.footer li {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer text {
  font-size: 26rpx;
  padding-top: 5rpx;
  color: #c4c4cc;
}
.footer .icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-size: cover;
}
.footer .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan.svg');
}
.footer .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order.svg');
}
.footer .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg.svg');
}
.footer .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user.svg');
}
.footer .active text {
  color: #13b7f6;
}
.footer .active .home {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/loan-h.svg');
}
.footer .active .order {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/order-h.svg');
}
.footer .active .message {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/msg-h.svg');
}
.footer .active .service {
  background-image: url('http://prod.service.zjzmjr.com/images/svg/user-h.svg');
}
.product-list {
  background: #f2f2fc;
}
.product-list .banner image {
  width: 100%;
  height: 350rpx;
}
.product-list .tabs {
  background: #fff;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
}
.product-list .tabs image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
.product-list .tabs view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.product-list .products {
  padding-bottom: 100rpx;
}
.product-list .products li {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  margin: 20rpx 5%;
  background-size: cover;
}
.product-list .products .tit {
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding: 40rpx 0;
}
.product-list .products .tit text {
  color: #fff;
  font-size: 36rpx;
  padding-top: 10rpx;
}
.product-list .products .con {
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  display: flex;
  padding: 20rpx 0;
}
.product-list .products .con text {
  width: 50%;
  flex: 1;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-align: center;
}
